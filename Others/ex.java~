import java.util.Scanner;
public class ex{
  public static void main(String args[]){
    Scanner sc = new Scanner (System.in);
    System.out.println("Enter a number");
    int a = sc.nextInt();
    for(int c = 1; c<=a; c++){
      for(int d = a-c; d<a; d--){
        System.out.print(" ");
        for(int e = 1; e<=c; e++){
          System.out.print("*");
        }
        System.out.println();
      }
    }
  }
}
                                         