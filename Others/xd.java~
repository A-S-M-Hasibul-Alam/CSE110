import java.util.Scanner;
public class xd{
  public static void main(String args[]){
    Scanner sc = new Scanner(System.in);
    System.out.println("Enter a number");
    int n = sc.nextInt();
    for(int c=1; c<=n; c++){
      for(int d=1; d<=n-c; d++){
        System.out.print(" ");
      }
      for(int e=1; e<=c; e++){
        System.out.print(e);
      }
      System.out.println();
    }
  }
}